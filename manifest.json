{
  "manifest_version": 3,
  "name": "Lernzy Content Share Extension",
  "version": "1.0",
  "description": "Save any type of content with tags to Lernzy, categorise it, learn it and grow!",
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": ["*://*/*"]
}
